<h1><%= @task.title %></h1>
<p> <%= @task.details %> </p>
<% if (@task.completed) %>
  <%= "This task is completed" %>
<%else%>
  <%= "This task is no completed yet" %>
<% end%>

<div class="d-flex gap-3">
<%= link_to "Edit task", edit_path(@task)%>
<%= link_to "Delete task", delete_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
<p> <%= link_to "Back to the list", tasks_path%> </p>
