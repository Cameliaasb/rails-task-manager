<h1><%= @task.title %></h1>
<p> <%= @task.details %> </p>
<% if (@task.completed) %>
  <%= "This task is completed" %>
<%else%>
  <%= "This task is no completed yet" %>
<% end%>


<p> <%= link_to "Edit task", edit_path(@task)%> </p>
<p> <%= link_to "Delete task", delete_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%> </p>
<p> <%= link_to "Back to the list", tasks_path%> </p>
